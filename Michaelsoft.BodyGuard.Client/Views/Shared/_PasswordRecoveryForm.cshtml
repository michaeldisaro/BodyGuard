@using Michaelsoft.BodyGuard.Client.Models.Forms
@using Michaelsoft.BodyGuard.Common.Extensions
@using Microsoft.AspNetCore.Mvc.Localization
@model Michaelsoft.BodyGuard.Client.Models.Forms.PasswordRecoveryForm
@inject IViewLocalizer Localizer
@{
    var formStatus = TempData.Get<FormStatus>("FormStatus");
}

<form method="post" asp-area="Authentication" asp-page="/PasswordRecovery">
    <div class="validate-recovery-form">
        <input type="hidden" asp-for="SuccessArea">
        <input type="hidden" asp-for="SuccessPage">
        <input type="hidden" asp-for="FailureArea">
        <input type="hidden" asp-for="FailurePage">
        <input type="hidden" asp-for="SubmitLabel">
        <input type="hidden" asp-for="PasswordRecoveryRequest.ValidateRecoveryUrl">
        <div class="form-group">
            <div class="bodyguard_form-label">
                <label asp-for="PasswordRecoveryRequest.EmailAddress"></label>
            </div>
            <div class="bodyguard_form-input">
                <input type="text" class="form-control" asp-for="PasswordRecoveryRequest.EmailAddress" value="@formStatus.GetAttemptedValue("PasswordRecoveryRequest.EmailAddress")"/>
            </div>
            <div class="bodyguard_form-error">
                <span asp-validation-for="PasswordRecoveryRequest.EmailAddress" class="text-danger">@Html.Raw(formStatus.GetError("PasswordRecoveryRequest.EmailAddress"))</span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-sm btn-block">@Localizer[Model.SubmitLabel]</button>
        </div>
    </div>
</form>