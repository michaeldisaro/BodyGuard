@model Michaelsoft.BodyGuard.Client.Models.LoginForm

<form method="post" asp-area="Authentication" asp-page="/Login" asp-route-returnurl="@Model.SuccessUrl">
    <div class="login-form">
        <input type="hidden" asp-for="SuccessUrl">
        <input type="hidden" asp-for="FailureUrl">
        <input type="hidden" asp-for="SubmitLabel">
        <div class="form-group">
            <label asp-for="LoginRequest.EmailAddress"></label>
            <input type="text" asp-for="LoginRequest.EmailAddress"/>
            <span asp-validation-for="LoginRequest.EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LoginRequest.Password"></label>
            <input type="password" asp-for="LoginRequest.Password"/>
            <span asp-validation-for="LoginRequest.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">@Model.SubmitLabel</button>
        </div>
    </div>
</form>