@model Michaelsoft.BodyGuard.Client.Models.Forms.ValidateRecoveryForm

<form method="post" asp-area="Authentication" asp-page="/ValidateRecovery">
    <div class="validate-recovery-form">
        <input type="hidden" asp-for="SuccessUrl">
        <input type="hidden" asp-for="FailureUrl">
        <input type="hidden" asp-for="SubmitLabel">
        <input type="hidden" asp-for="ValidateRecoveryRequest.Token">
        <div class="form-group">
            <div class="bodyguard_form-label">
                <label asp-for="ValidateRecoveryRequest.EmailAddress"></label>
            </div>
            <div class="bodyguard_form-input">
                <input type="text" asp-for="ValidateRecoveryRequest.EmailAddress"/>
            </div>
            <div class="bodyguard_form-error">
                <span asp-validation-for="ValidateRecoveryRequest.EmailAddress" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bodyguard_form-label">
                <label asp-for="ValidateRecoveryRequest.NewPassword"></label>
            </div>
            <div class="bodyguard_form-input">
                <input type="password" asp-for="ValidateRecoveryRequest.NewPassword"/>
            </div>
            <div class="bodyguard_form-error">
                <span asp-validation-for="ValidateRecoveryRequest.NewPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="bodyguard_form-label">
                <label asp-for="ValidateRecoveryRequest.NewPasswordConfirm"></label>
            </div>
            <div class="bodyguard_form-input">
                <input type="password" asp-for="ValidateRecoveryRequest.NewPasswordConfirm"/>
            </div>
            <div class="bodyguard_form-error">
                <span asp-validation-for="ValidateRecoveryRequest.NewPasswordConfirm" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">@Model.SubmitLabel</button>
        </div>
    </div>
</form>