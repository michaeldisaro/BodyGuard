@page
@using Michaelsoft.BodyGuard.Client.Models.Forms
@using Michaelsoft.BodyGuard.Common.HttpModels.Authentication
@using Michaelsoft.BodyGuard.Common.Models
@model Registration

@{
    ViewData["Title"] = "Registration";
}

<div class="text-center">
    <legend class="display-4">BodyGuard Registration Test</legend>

    @{
        await Html.RenderPartialAsync(
                                      "~/Views/Shared/_RegistrationForm.cshtml",
                                      new RegistrationForm
                                      {
                                          SuccessUrl = "/Site/Success",
                                          FailureUrl = "/Site/Registration",
                                          SubmitLabel = "Registrati",
                                          CreateRequest = new UserCreateRequest {UserData = new User()}
                                      });
    }

</div>